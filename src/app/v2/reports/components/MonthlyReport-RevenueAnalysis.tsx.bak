'use client';

import React, { useState } from 'react';
import {
  BarChart3, TrendingUp, DollarSign, Target,
  CheckCircle, Clock, XCircle, Eye, EyeOff, TrendingDown,
} from 'lucide-react';
import type { RevenueAnalysisV2 } from './MonthlyReport-Types';

interface MonthlyReportRevenueAnalysisProps {
  revenueAnalysis: RevenueAnalysisV2;
}

function formatAmount(amount: number): string {
  if (amount >= 100000000) {
    const value = parseFloat((amount / 100000000).toFixed(2));
    return `${value}억원`;
  }
  if (amount >= 10000) {
    return `${Math.round(amount / 10000).toLocaleString()}만원`;
  }
  return `${amount.toLocaleString()}원`;
}

